body {
    background-image: radial-gradient( circle, #6aef60, #70ba7a, #619e67, #3d5543, #313c33);
   text-align: center;
   font-family: "Curlz MT";
   font-size: 30px;
   font-weight: bold;
   font-stretch: narrower;
}
h1 {
    font-family: "Curlz MT";
   font-size: 60px;
   font-weight: bold;
   font-stretch: narrower;
   text-shadow: 2px 2px 3px #43310a;
}
button {
    font-size: 20px;
    text-align: center;
    background-color: black;
    font-family: "Curlz MT";
   font-weight: bold;
   font-stretch: narrower;
   color: #3cff00; opacity: 100;
   border-radius: 8px;
}
input {
    font-size: 20px;
    text-align: center;
    background-color: rgb(26, 252, 1);
    font-family: "Agency FB";
   font-weight: bold;
   font-stretch: narrower;
   color: #000000; opacity: 100;
   border-radius: 3px;
}
#form {
    width: 400px;
    margin: 10vh auto 0 auto;
    padding: 20px;
    background-color: rgb(161, 148, 86); 
    border-radius: 250px;
    border: 3px solid rgb(76, 226, 237);
    font-size: 20px;
    box-shadow: 10px 10px 5px #43310a;
}
#form h1 {
    font-family: "Curlz MT";
    font-size: 45px;
    font-weight: bold;
    font-stretch: narrower;
    text-shadow: 2px 2px 3px #415050;
}
#form button {
    cursor: pointer;
    font-size: 20px;
    font-family: "Curlz MT";
    background-color: black;
    font-weight: bold;
   font-stretch: narrower;
   color: #000000;
   border-radius: 3px;
   text-align: center;
   width: 25%;
}
.input-control input {
    border: 2px dotted rgb(0, 107, 137);
	border-radius: 3px;
}



